<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/offset_8">

    <TextView
        android:id="@+id/pageLoadingError"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/pokemon_next_page_loading_error"
        android:textAlignment="center" />

    <ImageView
        android:id="@+id/pageLoadingRetry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/offset_8"
        app:srcCompat="@drawable/ic_retry"
        app:tint="?attr/colorSecondary" />
</LinearLayout>